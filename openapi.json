  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "RegisterDto": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "Иван Иванов"
          },
          "email": {
            "type": "string",
            "example": "ivan@example.com"
          },
          "password": {
            "type": "string",
            "example": "StrongP@ssw0rd",
            "minLength": 6
          }
        },
        "required": [
          "fullName",
          "email",
          "password"
        ]
      },
      "AuthTokenResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "required": [
          "access_token"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "ivan@example.com"
          },
          "password": {
            "type": "string",
            "example": "StrongP@ssw0rd"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CreateLeadDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "lead@example.com"
          },
          "phoneNumber": {
            "type": "string",
            "example": "+1-555-1234"
          },
          "site": {
            "type": "string",
            "example": "example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "comment": {
            "type": "string",
            "example": "Interested in product X"
          },
          "companyTypeId": {
            "type": "string",
            "example": "uuid-of-company-type"
          }
        },
        "required": [
          "email"
        ]
      },
      "LeadResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "uuid"
          },
          "email": {
            "type": "string",
            "example": "lead@example.com"
          },
          "phoneNumber": {
            "type": "string",
            "example": "+1-555-1234"
          },
          "site": {
            "type": "string",
            "example": "example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "comment": {
            "type": "string",
            "example": "Interested in product X"
          },
          "companyType": {
            "type": "object",
            "example": {
              "id": "uuid",
              "code": "b2b",
              "name": "B2B"
            },
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "example": "2025-09-18T10:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "example": "2025-09-18T10:00:00.000Z"
          }
        },
        "required": [
          "id",
          "email",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateLeadDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "lead@example.com"
          },
          "phoneNumber": {
            "type": "string",
            "example": "+1-555-1234"
          },
          "site": {
            "type": "string",
            "example": "example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "comment": {
            "type": "string",
            "example": "Interested in product X"
          },
          "companyTypeId": {
            "type": "string",
            "example": "uuid-of-company-type"
          }
        },
        "required": [
          "email"
        ]
      },
      "SendProposalDto": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string",
            "example": "target@company.com"
          },
          "subject": {
            "type": "string",
            "example": "Предложение о сотрудничестве"
          },
          "text": {
            "type": "string",
            "example": "Здравствуйте! Предлагаем..."
          },
          "html": {
            "type": "string",
            "example": "<p>Здравствуйте! Предлагаем...</p>"
          },
          "file": {
            "type": "string",
            "format": "binary",
            "description": "Attachment file"
          }
        },
        "required": [
          "to",
          "subject"
        ]
      }
    }
  }
